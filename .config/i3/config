#set win-key as base key
set $mod Mod4

#workspace names
set $w0 霊
set $w1 一
set $w2 二
set $w3 三
set $w4 四
set $w5 五
set $w6 六
set $w7 七
set $w8 八
set $w9 九
set $w10 十

#gaps around windows, in pixels
gaps inner 15
#gaps around desktop, in pixels
gaps outer 0
#border around windows, in pixels
new_window pixel 5

#colors!
set $active         #1ba1f5
set $inactive       #8fb0c4
set $white          #f1edfb

#what                   border     background text   indicator
client.focused          $active    $active    $text  $active
client.unfocused        $inactive  $inactive  $text  $inactive
client.focused_inactive $inactive  $inactive  $text  $inactive
client.urgent           $red       $red       $white $red

#fonts
font pango:monospace 10
font pango:DejaVu Sans Mono 8

#hotkeys for basic stuff
#start a terminal
bindsym $mod+Return exec urxvt
#kill focused window
bindsym $mod+Shift+q kill
#start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+r exec --no-startup-id dmenu_run
bindsym XF86Calculator exec --no-startup-id qalculate

#hotkeys related to music player
#volume up and down
bindsym Mod3+Prior exec amixer -q set Master 1dB+ unmute
bindsym Mod3+Next exec amixer -q set Master 1dB- unmute
#toggle play
bindsym Mod3+Delete exec clementine --play-pause
#previous and next track
bindsym Mod3+Home exec clementine --previous
bindsym Mod3+End exec clementine --next
#seek backward and forward
bindsym Mod1+Shift+Ctrl+Left exec clementine --seek-by -10
bindsym Mod1+Shift+Ctrl+Right exec clementine --seek-by 10
#focus music player
bindsym Mod3+Insert exec i3-run-or-raise -n clementine -p clementine

#hotkeys for focusing windows around
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#hotkeys for moving focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

#hotkeys for executing various programs
bindsym Mod1+Ctrl+bracketleft exec i3-run-or-raise -n '@.*:~$' -p urxvt
bindsym Mod1+Ctrl+Shift+bracketleft exec urxvt
bindsym Mod1+Ctrl+bracketright exec i3-run-or-raise -n '@burza' -p 'urxvt -e zsh -i -l -c "ssh burza"'
bindsym Mod1+Ctrl+Shift+bracketright exec urxvt -e zsh -i -l -c 'ssh burza'
bindsym Mod1+Ctrl+semicolon exec i3-run-or-raise -n 'Mozilla Firefox' -p firefox
bindsym Mod1+Ctrl+Shift+m exec i3-run-or-raise -n 'Buddy List' -p pidgin
bindsym Mod1+Ctrl+Shift+n exec 'urxvt -e zsh -i -l -c vim'
bindsym $mod+e exec thunar

#bind workspace 1 to left monitor, place everything else on right monitor
workspace $w0 output DVI-I-1
workspace $w1 output HDMI-0
workspace $w2 output DVI-I-1
workspace $w3 output DVI-I-1
workspace $w4 output DVI-I-1
workspace $w5 output DVI-I-1
workspace $w6 output DVI-I-1
workspace $w7 output DVI-I-1
workspace $w8 output DVI-I-1
workspace $w9 output DVI-I-1
workspace $w10 output DVI-I-1

#hotkeys for workspace switching
bindsym $mod+grave workspace $w0
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

#hotkeys for moving focused container to another workspace
bindsym $mod+Shift+grave exec "i3-msg move container to workspace $w0 && i3-msg workspace $w0"
bindsym $mod+Shift+1 exec "i3-msg move container to workspace $w1 && i3-msg workspace $w1"
bindsym $mod+Shift+2 exec "i3-msg move container to workspace $w2 && i3-msg workspace $w2"
bindsym $mod+Shift+3 exec "i3-msg move container to workspace $w3 && i3-msg workspace $w3"
bindsym $mod+Shift+4 exec "i3-msg move container to workspace $w4 && i3-msg workspace $w4"
bindsym $mod+Shift+5 exec "i3-msg move container to workspace $w5 && i3-msg workspace $w5"
bindsym $mod+Shift+6 exec "i3-msg move container to workspace $w6 && i3-msg workspace $w6"
bindsym $mod+Shift+7 exec "i3-msg move container to workspace $w7 && i3-msg workspace $w7"
bindsym $mod+Shift+8 exec "i3-msg move container to workspace $w8 && i3-msg workspace $w8"
bindsym $mod+Shift+9 exec "i3-msg move container to workspace $w9 && i3-msg workspace $w9"
bindsym $mod+Shift+0 exec "i3-msg move container to workspace $w10 && i3-msg workspace $w10"

#hotkeys for moving floating windows
bindsym $mod+KP_Up    exec "i3-floater --width 0.475 --height 0.475 -x 0.5 -y 0   --xgap 30 --ygap 30"
bindsym $mod+KP_Right exec "i3-floater --width 0.475 --height 0.475 -x 1   -y 0.5 --xgap 30 --ygap 30"
bindsym $mod+KP_Down  exec "i3-floater --width 0.475 --height 0.475 -x 0.5 -y 1   --xgap 30 --ygap 30"
bindsym $mod+KP_Left  exec "i3-floater --width 0.475 --height 0.475 -x 0   -y 0.5 --xgap 30 --ygap 30"
bindsym $mod+KP_Prior exec "i3-floater --width 0.475 --height 0.475 -x 1   -y 0   --xgap 30 --ygap 30"
bindsym $mod+KP_Next  exec "i3-floater --width 0.475 --height 0.475 -x 1   -y 1   --xgap 30 --ygap 30"
bindsym $mod+KP_End   exec "i3-floater --width 0.475 --height 0.475 -x 0   -y 1   --xgap 30 --ygap 30"
bindsym $mod+KP_Home  exec "i3-floater --width 0.475 --height 0.475 -x 0   -y 0   --xgap 30 --ygap 30"
bindsym $mod+KP_Begin exec "i3-floater --width 0.475 --height 0.475 -x 0.5 -y 0.5 --xgap 30 --ygap 30 --toggle-floating"

#hotkeys for changing window / container layouts
#change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout toggle all
#change split orientation
bindsym $mod+w split v
bindsym $mod+a split h
#toggle tiling / floating
bindsym $mod+Shift+space floating toggle
#change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
#enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
#use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#hotkeys for changing window transparency
bindsym --border --whole-window --release $mod+Button4 exec "compton-trans -c -5"
bindsym --border --whole-window --release $mod+Button5 exec "compton-trans -c +5"

#hotkeys for i3wm management
#reload the configuration file
bindsym $mod+Shift+c reload
#restart i3 inplace (preserves layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
#exit i3 (logs out of the X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#i3 status bar
bar {
        position top
        status_command i3status
}

#assign workspaces to common programs
assign [class="(?i)pidgin"] $w0
assign [class="(?i)firefox"] $w2
assign [class="(?i)steam"] $w8
assign [class="(?i)qbittorrent"] $w9
assign [class="(?i)trackma-qt"] $w9
assign [class="(?i)clementine"] $w10

#position windows
for_window [class="feh"] floating enable
for_window [class="Pidgin"] floating enable move absolute position 1960 55
for_window [title="(?i)buddy list"] floating enable move absolute position 3480 55

#run some programs
exec_always --no-startup-id feh --bg-fill "$HOME/.wallpaper1" "$HOME/.wallpaper2"
exec --no-startup-id i3-msg "exec pidgin"
exec --no-startup-id i3-msg "exec firefox"
exec --no-startup-id i3-msg "exec trackma-qt"
exec --no-startup-id i3-msg "exec clementine"
exec --no-startup-id i3-msg "workspace $w1"
exec --no-startup-id i3-msg "workspace $w2"
