#set win-key as base key
set $mod Mod4

#workspace names
set $w1 一
set $w2 二
set $w3 三
set $w4 四
set $w5 五
set $w6 六
set $w7 七
set $w8 八
set $w9 九
set $w0 十

#gaps around windows, in pixels
gaps inner 15
#gaps around desktop, in pixels
gaps outer 0
#border around windows, in pixels
new_window pixel 5

#assign workspaces to common programs
assign [class="clementine"] $w9
assign [class="trackma-qt"] $w0

#colors!
set $black          #2c2836
set $darkblack      #73707e
set $red            #bb7473
set $darkred        #cf9fa4
set $green          #68b782
set $darkgreen      #9acbad
set $yellow         #abb773
set $darkyellow     #c5cba4
set $blue           #7865c5
set $darkblue       #a396d9
set $magenta        #bb65b6
set $darkmagenta    #cf96cf
set $cyan           #68a8c5
set $darkcyan       #9ac1d9
set $white          #f1edfb
set $darkwhite      #f1edfb
set $background     #133B47

#what                   border     background text   indicator
client.focused          $cyan      $cyan      $white $cyan
client.unfocused        $darkcyan  $darkcyan  $white $darkcyan
client.focused_inactive $darkcyan  $darkcyan  $white $darkcyan
client.urgent           $red       $red       $white $red

#fonts
font pango:monospace 10
font pango:DejaVu Sans Mono 8

#hotkeys for basic stuff
#start a terminal
bindsym $mod+Return exec urxvt
#kill focused window
bindsym $mod+Shift+q kill
#start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
bindsym $mod+r exec dmenu_run

#hotkeys related to music player
#volume up and down
bindsym Mod3+Prior exec amixer -q set Master 1dB+ unmute
bindsym Mod3+Next exec amixer -q set Master 1dB- unmute
#toggle play
bindsym Mod3+Delete exec clementine --play-pause
#previous and next track
bindsym Mod3+Home exec clementine --previous
bindsym Mod3+End exec clementine --next
#seek backward and forward
bindsym Mod1+Shift+Ctrl+Left exec clementine --seek-by -10
bindsym Mod1+Shift+Ctrl+Right exec clementine --seek-by 10
#focus music player
bindsym Mod3+Insert exec i3-run-or-raise -n clementine -p clementine

#hotkeys for focusing windows around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#hotkeys for executing various programs
bindsym Mod1+Ctrl+bracketleft exec i3-run-or-raise -c URxvt -p urxvt
bindsym Mod1+Ctrl+Shift+bracketleft exec urxvt
bindsym Mod1+Ctrl+bracketright exec i3-run-or-raise -n '@burza' -p 'urxvt -e zsh -i -l -c "ssh burza"'
bindsym Mod1+Ctrl+Shift+bracketright exec urxvt -e zsh -i -l -c 'ssh burza'
bindsym Mod1+Ctrl+semicolon exec i3-run-or-raise -n 'Mozilla Firefox' -p firefox
bindsym Mod1+Ctrl+Shift+m exec i3-run-or-raise -n 'Buddy List' -p pidgin
bindsym Mod1+Ctrl+Shift+n exec 'urxvt -e zsh -i -l -c vim'

#hotkeys for moving focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

#bind workspace 1 to left monitor, place everything else on right monitor
workspace $w1 output HDMI-0
workspace $w2 output DVI-I-1
workspace $w3 output DVI-I-1
workspace $w4 output DVI-I-1
workspace $w5 output DVI-I-1
workspace $w6 output DVI-I-1
workspace $w7 output DVI-I-1
workspace $w8 output DVI-I-1
workspace $w9 output DVI-I-1
workspace $w0 output DVI-I-1

#hotkeys for workspace switching
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w0

#hotkeys for moving focused container to another workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w0

#hotkeys for changing window / container layouts
#change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
#change split orientation
bindsym $mod+h split h
bindsym $mod+v split v
#toggle tiling / floating
bindsym $mod+Shift+space floating toggle
#change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
#enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
#use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#hotkeys for i3wm management
#reload the configuration file
bindsym $mod+Shift+c reload
#restart i3 inplace (preserves layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
#exit i3 (logs out of the X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#i3 status bar
bar {
        status_command i3status
}

#run some programs
exec_always --no-startup-id feh --bg-fill "$HOME/.wallpaper1" "$HOME/.wallpaper2"
exec --no-startup-id i3-msg "workspace $w0; exec trackma-qt"
exec --no-startup-id i3-msg "workspace $w9; exec clementine"
exec --no-startup-id i3-msg "workspace $w8; exec pidgin"
exec --no-startup-id i3-msg "workspace $w1; exec firefox"
exec --no-startup-id i3-msg "workspace $w1"
exec --no-startup-id i3-msg "workspace $w2"
