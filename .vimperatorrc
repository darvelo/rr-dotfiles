"ctrl + a
inoremap <C-a> <C-Home><C-S-End>
cnoremap <C-a> <C-Home><C-S-End>

"disable search engine autocomplete
set complete=l

"disable everything but tabs
set gui=none,tabs

noremap J 50j
noremap K 50k

"fix hints on youtube
highlight Hint -append z-index:2999999999

"don't enter insert mode automatically
set focuscontent

"make it easier to navigate hints single-handed
set hintchars=12345
set hintmatching=contains

"disable scrollbars
set scrollbars=false

"show small numbers above each tab
set tabnumbers=true
