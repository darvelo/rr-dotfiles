#!/bin/sh
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
rm ~/.minttyrc
ln -s $DIR/.minttyrc-light ~/.minttyrc
echo -e 'set background=light' >~/.vimrc-background
echo -e 'color hemisu' >~/.vimrc-background
cp $HOME/.config/sakura/sakura-base.conf $HOME/.config/sakura/sakura.conf
sed -i 's/last_colorset=1/last_colorset=2/' $HOME/.config/sakura/sakura.conf
